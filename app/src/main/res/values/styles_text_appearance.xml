<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="YoyoAppTextAppearance" parent="TextAppearance.AppCompat" />

    <style name="YoyoAppTextAppearance.NavigationActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="YoyoAppTextAppearance.NavigationInactive">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/c_c0c0c0</item>
    </style>

    <style name="YoyoAppTextAppearance.DashboardTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_c0c0c0</item>
    </style>

    <style name="YoyoAppTextAppearance.DashboardDetail">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/c_c0c0c0</item>
    </style>

    <style name="YoyoAppTextAppearance.MovieCardTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="YoyoAppTextAppearance.MovieCardSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="YoyoAppTextAppearance.CastName">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="YoyoAppTextAppearance.CastCharacter">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="YoyoAppTextAppearance.GreyLight">
        <item name="android:textColor">@color/yoyo_grey</item>
    </style>

    <style name="YoyoAppTextAppearance.GreyLight.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="YoyoAppTextAppearance.GreyLight.Message">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
